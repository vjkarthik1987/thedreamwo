    <div class="example-coontainer">
        <div class="container col-xxl-8 px-4 py-3">
            <div class="row flex-row align-items-center g-5 py-5">
                <!-- All Examples -->
                <div class="col-lg-8 col-sm-10  trend-holder">
                    <a href="allExamples">
                        <h4 class="col-lg-9 lh-1">See All Our Examples</h4>
                    </a>
                </div>
                <div class="col-lg-8 col-sm-10  trend-holder">
                    <h4 class="col-lg-9 lh-1">See Examples by Each Theme</h4>
                </div>
                <!-- Trend Examples -->
                <% for (const trend in trends) { %>
                <% const path = "examples/" %>
                <div class="col-lg-8 col-sm-10 trend-holder">
                    <a href=<%= path.concat(trend) %>>
                        <h4 class="col-lg-9 lh-1 mx-5"><%= trends[trend][0] %></h4>
                    </a>
                </div>
                <% } %>

            </div>
        </div>
